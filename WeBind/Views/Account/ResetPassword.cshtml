@model WeBind.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
<div class="container">
    <div class="page-section">
        <div class="row">
            <div class="col-md-10 col-lg-8 col-md-offset-1 col-lg-offset-2">
                <h3>@ViewBag.Title</h3>
                <div class="panel panel-default">
                    <div class="panel-body">
                        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.Code)
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group form-control-material static required">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "exampleInputEmail1", placeholder = "Enter email", type = "email" })
                                <label for="exampleInputEmail1">Email address</label>
                            </div>
                            <div class="form-group form-control-material static required">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "exampleInputEmail1", placeholder = "New Password" })
                                <label for="exampleInputEmail1">New Password</label>
                            </div>
                            <div class="form-group form-control-material static required">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "exampleInputEmail1", placeholder = "Retype Password" })
                                <label for="exampleInputEmail1">Retype Password</label>
                            </div>
                            <button type="submit" class="btn btn-primary">Reset</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>